{
  "parser": "babel-eslint",
  "extends": [
    "standard"
  ],
  "plugins": [
    "async-await"
  ],
  "rules": {
    "async-await/space-after-async": 2,
    "async-await/space-after-await": 2,
    "comma-dangle": "off",
    "generator-star-spacing": "off",
    "no-return-assign": "off",
    "indent": ["error", 4],
    "no-trailing-spaces": [
      "error",
      {
        "skipBlankLines": true
      }
    ],
    "quotes": [
      "error",
      "single",
      {
        "allowTemplateLiterals": true
      }
    ],
    "semi": [
      "error",
      "always"
    ],
    "space-before-function-paren": [
      "error",
      "never"
    ]
  }
}
